<resources>

    <style name="Toolbar.Corners" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    <style name="MovieItems.Corners" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="contentPadding">0dp</item>

    </style>
    <style name="NewsItems.Corners" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">55dp</item>
        <item name="cornerSizeTopRight">55dp</item>
