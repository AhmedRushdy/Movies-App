<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_hor"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/movie_poster"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/NewsItems.Corners" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/poster_movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="18dp"
        tools:text="Movie news text view "
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:textSize="18sp"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/save_btn" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/save_btn"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginRight="5dp"
        android:background="@color/transparentBackground"
        android:src="@drawable/ic_bookmark_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74"
        android:foreground="?selectableItemBackgroundBorderless"
        app:shapeAppearanceOverlay="@style/Widget.Task1.ImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>